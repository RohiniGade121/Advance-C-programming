/*Write a C program to read a text file and display all the characters 
such that the case is reversed ...*/
#include<stdio.h>
#include<stdlib.h>
 #include<ctype.h>
 void main()
 {
    FILE *f1;
    char ch,s[10];
     printf("enter file name");
     scanf("%s",s);
     f1=fopen(s,"r");
      if(f1==NULL)
       {
        printf("file not found");
         exit(0);
       }
       while(!feof(f1))
       {
        ch=fgetc(f1);
         if(isupper(ch))
         printf("%c",tolower(ch));
         else if(islower(ch))
         printf("%c",toupper(ch));
          
       }
        fclose(f1);
      printf("characters are reversed successfully...");

 }
